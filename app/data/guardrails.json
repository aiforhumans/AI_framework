{
  "rules": [
    {
      "id": 1,
      "name": "PII Detector",
      "description": "Detect personally identifiable information like emails, phones, SSNs",
      "type": "pii",
      "enabled": true,
      "config": {
        "detect": [
          "email",
          "phone",
          "ssn",
          "credit_card"
        ],
        "mode": "warn"
      },
      "created_at": "2025-11-25T18:18:13.286367",
      "updated_at": "2025-11-25T18:18:13.286387"
    },
    {
      "id": 2,
      "name": "Profanity Filter",
      "description": "Block or warn on profane language",
      "type": "keyword",
      "enabled": true,
      "config": {
        "keywords": [
          "damn",
          "hell",
          "crap"
        ],
        "mode": "warn",
        "case_sensitive": false
      },
      "created_at": "2025-11-25T18:18:13.286452",
      "updated_at": "2025-11-25T18:18:13.286460"
    },
    {
      "id": 3,
      "name": "URL/Link Detector",
      "description": "Detect URLs and links in text",
      "type": "regex",
      "enabled": true,
      "config": {
        "patterns": [
          {
            "name": "URL",
            "pattern": "https?://[^\\s<>\\\"{}|\\\\^`\\[\\]]+"
          },
          {
            "name": "Email Link",
            "pattern": "mailto:[^\\s<>\\\"{}|\\\\^`\\[\\]]+"
          }
        ],
        "mode": "warn"
      },
      "created_at": "2025-11-25T18:18:13.286500",
      "updated_at": "2025-11-25T18:18:13.286505"
    },
    {
      "id": 4,
      "name": "Code Injection Pattern",
      "description": "Detect potential code injection patterns",
      "type": "regex",
      "enabled": true,
      "config": {
        "patterns": [
          {
            "name": "SQL Injection",
            "pattern": "(?i)(SELECT|INSERT|UPDATE|DELETE|DROP|UNION)\\s+.*(FROM|INTO|SET|TABLE|WHERE)"
          },
          {
            "name": "Script Tag",
            "pattern": "<script[^>]*>.*?</script>"
          },
          {
            "name": "System Command",
            "pattern": "(?i)(rm\\s+-rf|sudo|chmod|chown|wget|curl)\\s+"
          }
        ],
        "mode": "block"
      },
      "created_at": "2025-11-25T18:18:13.286513",
      "updated_at": "2025-11-25T18:18:13.286515"
    }
  ],
  "next_id": 5
}